@model IEnumerable<PriscilaZuniga_Examen1P.Models.PZClass>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado de Personas</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="PZClass" asp-action="Index">
    <p>
        Ingresa el Apodo de la persona: <input type="text" name="buscar" class="form-text"/>
        <input type="submit" value="Buscar" class="btn btn-sm btn-dark"/>

    </p>

</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PZ_Peso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PZ_Apodo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PZ_Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PZ_FechaNacimiento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PZ_Peso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PZ_Apodo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PZ_Activo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PZ_FechaNacimiento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
